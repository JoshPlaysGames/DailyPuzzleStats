---
// Layout for April 2025 Dashboard, extends BaseLayout for global styling
import BaseLayout from '../BaseLayout.astro';
import GamesStats from '../../components/GameStats.vue';
import GamesPlayed from '../../components/GamesPlayed.vue';

const { title, dataFile } = Astro.props;
---
<BaseLayout title={title}>
  <!-- Top-level stats card -->
  <GamesStats client:visible dataFile={dataFile} />

  <!-- Page-specific content -->
  <slot />

  <!-- Graph component -->
  <GamesPlayed client:visible dataFile={dataFile} />
</BaseLayout>
